<!doctype html>
<html ng-app="App">

<head>
  <meta charset="utf-8">
  <title>管理后台</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width">

  <script src="/dist/scripts/app-style.js"></script>
</head>

<body ng-controller="MainCtrl as mainVm">
  <div class="header" ng-class="{'is-test': isTest}">
    <div class="navbar navbar-default navbar-fixed-top" role="navigation" style="color:#fff">
      <div class="container-fluid">
        <ul class="nav navbar-nav navbar-right">
          <li uib-dropdown ng-if="mainVm.user">
            <a uib-dropdown-toggle href="javascript:void(0)" class="ng-cloak" ng-bind="mainVm.user.name">
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" uib-dropdown-menu>
              <li><a ui-sref="my-settings.edit-userinfo">修改个人信息</a></li>
              <li><a ui-sref="my-settings.reset-password">修改密码</a></li>
              <li><a href="javascript:void(0)" ng-click="mainVm.logout()">登出</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="clearfix">
      <div nav-sidebar class="sidebar" ng-class="{'is-test': isTest}"></div>
      <div class="main">
        <div ui-view="" keep-scroll-pos></div>
      </div>
    </div>
  </div>
  <script src="/dist/scripts/app-main.js"></script>
  <script>
  </script>
</body>

</html>
